<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tiagohs.hqr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tiagohs.hqr.ui.views.activities.RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.views.activities.ReaderActivity" />
        <activity android:name=".ui.views.activities.SearchActivity" />
        <activity android:name=".ui.views.activities.ComicDetailsActivity"
                  android:theme="@style/AppTheme.TransparentTheme" />
        <activity android:name=".ui.views.activities.ListComicsActivity" />

        <receiver
            android:name=".notification.NotificationReceiver"
            android:exported="false" />

        <service
            android:name=".download.DownloaderService"
            android:exported="false" />
    </application>

</manifest>